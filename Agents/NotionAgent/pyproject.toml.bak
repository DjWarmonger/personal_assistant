[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[project]
name = "notion_agent"
version = "0.1.0"
description = "Agent for interacting with Notion workspaces"
authors = [
	{name = "Author"}
]
readme = "README.md"
requires-python = ">=3.10"
dependencies = [
	# Core async and HTTP
	"aiohttp>=3.9.5,<4",
	"aiofiles>=24.1.0",
	"aiosignal>=1.3.1",
	"anyio>=4.4.0",
	"async-timeout>=4.0.3",
	"httpx>=0.27.0",
	"httpcore>=1.0.5",
	
	# Pydantic and validation
	"pydantic>=1.10.22,<2.0.0",
	"pydantic_core>=2.33.2",
	"annotated-types>=0.7.0",
	
	# LangChain ecosystem
	"langchain>=0.2.6",
	"langchain-community>=0.2.6",
	"langchain-core>=0.2.11",
	"langchain-openai>=0.1.14",
	"langchain-text-splitters>=0.2.2",
	"langgraph>=0.1.5",
	"langsmith>=0.1.83",
	"langfuse>=2.59.3",
	
	# OpenAI and AI
	"openai>=1.35.10",
	"tiktoken>=0.7.0",
	
	# Data processing
	"numpy>=1.26.4",
	"pandas>=2.2.3",
	"python-dateutil>=2.9.0",
	
	# Database and storage
	"psycopg>=3.2.3",
	"psycopg-binary>=3.2.3",
	"psycopg-pool>=3.2.4",
	"SQLAlchemy>=2.0.31",
	
	# Configuration and utilities
	"python-dotenv>=1.0.1",
	"PyYAML>=6.0.1",
	"click>=8.1.7",
	"python-dateutil>=2.9.0",
	"pytz>=2024.2",
	"tzdata>=2024.2",
	
	# Web framework
	"Flask>=3.0.3",
	"starlette>=0.39.2",
	"uvicorn>=0.31.1",
	"Werkzeug>=3.0.3",
	
	# JSON and serialization
	"orjson>=3.10.6",
	"ujson>=5.10.0",
	"jsonlines>=4.0.0",
	"jsonpatch>=1.33",
	"jsonpointer>=3.0.0",
	
	# Networking and requests
	"requests>=2.32.3",
	"urllib3>=2.2.2",
	"certifi>=2024.7.4",
	"charset-normalizer>=3.3.2",
	"idna>=3.7",
	
	# Utilities
	"attrs>=23.2.0",
	"typing_extensions>=4.12.2",
	"packaging>=24.1",
	"filelock>=3.16.1",
	"platformdirs>=4.2.2",
	"six>=1.16.0",
	"setuptools>=69.5.1",
	"wheel>=0.43.0",
	
	# Local dependencies
	"tz-common>=0.9.0",
]

[project.optional-dependencies]
dev = [
	"pytest>=8.2.2",
	"pytest-asyncio>=0.25.0",
	"ruff>=0.6.9",
	"mypy",
	"black",
	"flake8",
]

ml = [
	# Machine learning dependencies (optional)
	"torch>=2.5.1",
	"transformers>=4.47.1",
	"tokenizers>=0.21.0",
	"huggingface-hub>=0.27.0",
	"accelerate>=1.2.1",
	"safetensors>=0.4.5",
	"scikit-learn>=1.6.0",
	"scipy>=1.12.0",
]

jupyter = [
	# Jupyter ecosystem (optional)
	"ipython>=8.26.0",
	"ipykernel>=6.29.5",
	"jupyter_client>=8.6.2",
	"jupyter_core>=5.7.2",
	"marimo>=0.11.0",
]

cloud = [
	# Cloud services (optional)
	"boto3>=1.35.81",
	"aioboto3>=13.3.0",
	"google-api-python-client>=2.136.0",
	"google-auth>=2.31.0",
]

[tool.pytest]
testpaths = ["tests"]
python_files = "test_*.py"
python_classes = "Test*"
python_functions = "test_*"
addopts = "--import-mode=importlib"

[tool.setuptools]
packages = ["Agent", "operations", "launcher", "tests"]

[tool.uv]
index-url = "https://pypi.org/simple" 